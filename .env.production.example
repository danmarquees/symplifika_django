# Production Environment Variables for Render.com

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here

# Database (automatically provided by Render)
DATABASE_URL=postgresql://user:password@host:port/database

# Allowed Hosts (automatically handled by Render)
# ALLOWED_HOSTS will be set automatically based on RENDER_EXTERNAL_HOSTNAME

# CORS Settings (will be configured automatically for Render)
# CORS_ALLOWED_ORIGINS=https://yourdomain.onrender.com
# CSRF_TRUSTED_ORIGINS=https://yourdomain.onrender.com

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Custom domain settings
# CUSTOM_DOMAIN=yourdomain.com

# Optional: Email settings
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Optional: Redis (for caching/sessions)
# REDIS_URL=redis://localhost:6379/0

# Optional: Sentry (error tracking)
# SENTRY_DSN=your-sentry-dsn-here
